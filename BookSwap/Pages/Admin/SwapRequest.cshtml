@page
@model BookSwap.Pages.Admin.SwapRequestModel
@{
    Layout = "_Admin";
}
<div class="container-fluid pt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw- bold">SwapRequest List</h4>
        <a href="AddCategory.html" class="btn btn-primary">Add New</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h4>SwapRequest List</h4>
        </div>

        <div class="card-body">
            <table class="table table-hover table-bordered text-center">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Category</th>
                        <th>Icon</th>
                        <th>Status</th>
                        <th>Entry Date</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Electronics</td>
                        <td>
                            <img src="images/electronics.png" width="80" height="80" alt="Icon">
                        </td>
                        <td>Active</td>
                        <td>01-01-2026</td>
                        <td>
                            <a href="AddCategory.html?CategoryId=1" class="btn btn-info btn-sm">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                        </td>
                        <td>
                            <button class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this category?');">
                                Delete
                            </button>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>