@page
@model BookSwap.Pages.Admin.Education.AddEducationModel
@{
    Layout = "_Admin";
}
<div class="container-fluid pt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">Education Form</h4>
        <a href="/Admin/Education/Education" class="btn btn-primary">Back</a>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h4>Education Form</h4>
        </div>

        <div class="card-body">
            <form enctype="multipart/form-data" method="post">

                <!-- Category Name -->
                <div class="mb-3">
                    <label class="form-label" asp-for="eduTblDTO.EducationName">Education Name</label>
                    <input type="text" asp-for="eduTblDTO.EducationName" class="form-control" placeholder="Enter Education name">
                </div>

                <!-- Status -->
                <div class="mb-3">
                    <label class="form-label" asp-for="eduTblDTO.Status">Status</label>
                    <select class="form-control" asp-for="eduTblDTO.Status">
                        <option>--- Select ---</option>
                        <option>Active</option>
                        <option>Deactive</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="text-center">
                    @if (string.IsNullOrEmpty(Request.Query["EditId"].ToString()))
                    {
                        <button type="submit" asp-page-handler="Create" class="btn btn-success">
                            <i class="fa-regular fa-floppy-disk"></i> Save
                        </button>
                    }
                    else
                    {
                        <input type="hidden" asp-for="eduTblDTO.EducationId" class="form-control">
                        <button type="submit" asp-page-handler="Update" class="btn btn-info">
                            <i class="fa-regular fa-floppy-disk"></i> Update
                        </button>
                    }
                    <button type="reset" class="btn btn-danger">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Message (Spacing Added Here) -->
    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-success mt-3">
            @ViewData["Message"]
        </div>
    }
    else if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">
            @ViewData["Error"]
        </div>
    }
</div>


