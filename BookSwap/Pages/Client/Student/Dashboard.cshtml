@page
@model BookSwap.Pages.Client.Student.DashboardModel
@{
    Layout = "_Student";
}

<!-- Main Content -->
<div class="flex-1 flex flex-col lg:ml-0">
    <header class="h-14 flex items-center gap-4 border-b border-border px-4 bg-background sticky top-0 z-10">
        <button id="sidebar-toggle" class="lg:hidden p-2 rounded-md hover:bg-muted">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
        <h1 class="font-serif text-lg font-semibold">Student Portal</h1>
    </header>

    <main class="p-6 flex-1">
        <div class="mb-8">
            <h2 class="font-serif text-2xl font-bold text-foreground mb-2">Welcome back, Student!</h2>
            <p class="text-muted-foreground">Here's an overview of your book activities.</p>
        </div>

        <!-- Stats Grid -->
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="card card-elevated p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg hero-gradient flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">12</p>
                        <p class="text-sm text-muted-foreground">My Books</p>
                    </div>
                </div>
            </div>

            <div class="card card-elevated p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg hero-gradient flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">5</p>
                        <p class="text-sm text-muted-foreground">Borrowed</p>
                    </div>
                </div>
            </div>

            <div class="card card-elevated p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg hero-gradient flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">3</p>
                        <p class="text-sm text-muted-foreground">Pending Swaps</p>
                    </div>
                </div>
            </div>

            <div class="card card-elevated p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg hero-gradient flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">8</p>
                        <p class="text-sm text-muted-foreground">Messages</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="grid lg:grid-cols-2 gap-6">
            <div class="card card-elevated p-6">
                <h3 class="font-serif text-lg font-semibold mb-4">Recent Swap Requests</h3>
                <div class="space-y-4">
                    <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50">
                        <div class="w-12 h-16 bg-gradient-to-br from-purple-200 to-purple-300 rounded-lg"></div>
                        <div class="flex-1">
                            <p class="font-medium">The Great Gatsby</p>
                            <p class="text-sm text-muted-foreground">Requested by Rahul K.</p>
                        </div>
                        <span class="badge badge-outline text-xs">Pending</span>
                    </div>
                    <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50">
                        <div class="w-12 h-16 bg-gradient-to-br from-blue-200 to-blue-300 rounded-lg"></div>
                        <div class="flex-1">
                            <p class="font-medium">1984</p>
                            <p class="text-sm text-muted-foreground">Requested by Priya M.</p>
                        </div>
                        <span class="badge badge-primary text-xs">Accepted</span>
                    </div>
                </div>
                <a href="swap-requests.html" class="btn btn-outline w-full mt-4">View All Requests</a>
            </div>

            <div class="card card-elevated p-6">
                <h3 class="font-serif text-lg font-semibold mb-4">Books Due Soon</h3>
                <div class="space-y-4">
                    <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50">
                        <div class="w-12 h-16 bg-gradient-to-br from-green-200 to-green-300 rounded-lg"></div>
                        <div class="flex-1">
                            <p class="font-medium">To Kill a Mockingbird</p>
                            <p class="text-sm text-muted-foreground">Due in 3 days</p>
                        </div>
                        <span class="badge badge-outline text-xs">Due Soon</span>
                    </div>
                    <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50 border-l-4 border-destructive">
                        <div class="w-12 h-16 bg-gradient-to-br from-red-200 to-red-300 rounded-lg"></div>
                        <div class="flex-1">
                            <p class="font-medium">Pride and Prejudice</p>
                            <p class="text-sm text-destructive">Overdue by 2 days</p>
                        </div>
                        <span class="badge bg-destructive text-destructive-foreground text-xs">Overdue</span>
                    </div>
                </div>
                <a href="borrowed.html" class="btn btn-outline w-full mt-4">View All Borrowed</a>
            </div>
        </div>
    </main>
</div>
