@page
@model BookSwap.Pages.Client.Student.ReportModel
@{
    Layout = "_Student";
}

<!-- Main Content -->
<div class="flex-1 flex flex-col lg:ml-0">
    <header class="h-14 flex items-center gap-4 border-b border-border px-4 bg-background sticky top-0 z-10">
        <button id="sidebar-toggle" class="lg:hidden p-2 rounded-md hover:bg-muted">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
        <h1 class="font-serif text-lg font-semibold">Student Portal</h1>
    </header>

    <main class="p-6 flex-1">
        <h2 class="font-serif text-2xl font-bold text-foreground mb-6">Activity Reports</h2>

        <!-- Stats Overview -->
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="card card-elevated p-6 text-center">
                <p class="text-4xl font-bold text-primary mb-2">24</p>
                <p class="text-sm text-muted-foreground">Total Swaps</p>
            </div>
            <div class="card card-elevated p-6 text-center">
                <p class="text-4xl font-bold text-primary mb-2">12</p>
                <p class="text-sm text-muted-foreground">Books Listed</p>
            </div>
            <div class="card card-elevated p-6 text-center">
                <p class="text-4xl font-bold text-primary mb-2">18</p>
                <p class="text-sm text-muted-foreground">Books Borrowed</p>
            </div>
            <div class="card card-elevated p-6 text-center">
                <p class="text-4xl font-bold text-primary mb-2">4.8</p>
                <p class="text-sm text-muted-foreground">Avg. Rating</p>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="card card-elevated p-6 mb-6">
            <h3 class="font-serif text-lg font-semibold mb-4">Recent Activity</h3>
            <div class="space-y-4">
                <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50">
                    <div class="w-10 h-10 rounded-full hero-gradient flex items-center justify-center text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium">Swap completed with Rahul K.</p>
                        <p class="text-sm text-muted-foreground">The Great Gatsby ↔ The Alchemist</p>
                    </div>
                    <span class="text-sm text-muted-foreground">2 days ago</span>
                </div>
                <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50">
                    <div class="w-10 h-10 rounded-full hero-gradient flex items-center justify-center text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium">Listed new book</p>
                        <p class="text-sm text-muted-foreground">1984 by George Orwell</p>
                    </div>
                    <span class="text-sm text-muted-foreground">5 days ago</span>
                </div>
                <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50">
                    <div class="w-10 h-10 rounded-full hero-gradient flex items-center justify-center text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium">Returned book</p>
                        <p class="text-sm text-muted-foreground">To Kill a Mockingbird to Priya M.</p>
                    </div>
                    <span class="text-sm text-muted-foreground">1 week ago</span>
                </div>
                <div class="flex items-center gap-4 p-3 rounded-lg bg-muted/50">
                    <div class="w-10 h-10 rounded-full hero-gradient flex items-center justify-center text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium">Received 5-star rating</p>
                        <p class="text-sm text-muted-foreground">From Amit S. for book swap</p>
                    </div>
                    <span class="text-sm text-muted-foreground">2 weeks ago</span>
                </div>
            </div>
        </div>

        <!-- Monthly Summary -->
        <div class="card card-elevated p-6">
            <h3 class="font-serif text-lg font-semibold mb-4">Monthly Summary - January 2024</h3>
            <div class="grid sm:grid-cols-3 gap-6">
                <div class="text-center p-4 rounded-lg bg-muted/50">
                    <p class="text-2xl font-bold text-foreground mb-1">5</p>
                    <p class="text-sm text-muted-foreground">Swaps Completed</p>
                </div>
                <div class="text-center p-4 rounded-lg bg-muted/50">
                    <p class="text-2xl font-bold text-foreground mb-1">3</p>
                    <p class="text-sm text-muted-foreground">New Listings</p>
                </div>
                <div class="text-center p-4 rounded-lg bg-muted/50">
                    <p class="text-2xl font-bold text-foreground mb-1">₹450</p>
                    <p class="text-sm text-muted-foreground">Saved on Books</p>
                </div>
            </div>
        </div>
    </main>
</div>
