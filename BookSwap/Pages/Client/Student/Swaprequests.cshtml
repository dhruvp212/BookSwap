@page
@model BookSwap.Pages.Client.Student.SwaprequestsModel
@{
    Layout = "_Student";
}

<!-- Main Content -->
<div class="flex-1 flex flex-col lg:ml-0">
    <header class="h-14 flex items-center gap-4 border-b border-border px-4 bg-background sticky top-0 z-10">
        <button id="sidebar-toggle" class="lg:hidden p-2 rounded-md hover:bg-muted">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
        <h1 class="font-serif text-lg font-semibold">Student Portal</h1>
    </header>

    <main class="p-6 flex-1">
        <h2 class="font-serif text-2xl font-bold text-foreground mb-6">Swap Requests</h2>

        <!-- Tabs -->
        <div class="flex gap-2 mb-6">
            <button data-tab="incoming" class="btn btn-primary">Incoming (3)</button>
            <button data-tab="outgoing" class="btn btn-outline">Outgoing (2)</button>
        </div>

        <!-- Incoming Requests -->
        <div id="incoming" class="tab-content space-y-4">
            <div class="card card-elevated p-4">
                <div class="flex flex-col sm:flex-row gap-4">
                    <div class="w-16 h-24 bg-gradient-to-br from-purple-200 to-purple-300 rounded-lg flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-serif font-semibold text-foreground">The Great Gatsby</h3>
                                <p class="text-sm text-muted-foreground">Requested by <span class="font-medium">Rahul Kumar</span></p>
                            </div>
                            <span class="badge badge-outline text-xs">Pending</span>
                        </div>
                        <p class="text-sm text-muted-foreground mt-2">2 hours ago</p>
                        <div class="mt-3 flex gap-2">
                            <button class="btn btn-primary btn-sm">Accept</button>
                            <button class="btn btn-outline btn-sm">Decline</button>
                            <button class="btn btn-ghost btn-sm">Message</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-elevated p-4">
                <div class="flex flex-col sm:flex-row gap-4">
                    <div class="w-16 h-24 bg-gradient-to-br from-blue-200 to-blue-300 rounded-lg flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-serif font-semibold text-foreground">1984</h3>
                                <p class="text-sm text-muted-foreground">Requested by <span class="font-medium">Priya Mehta</span></p>
                            </div>
                            <span class="badge badge-outline text-xs">Pending</span>
                        </div>
                        <p class="text-sm text-muted-foreground mt-2">1 day ago</p>
                        <div class="mt-3 flex gap-2">
                            <button class="btn btn-primary btn-sm">Accept</button>
                            <button class="btn btn-outline btn-sm">Decline</button>
                            <button class="btn btn-ghost btn-sm">Message</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-elevated p-4">
                <div class="flex flex-col sm:flex-row gap-4">
                    <div class="w-16 h-24 bg-gradient-to-br from-green-200 to-green-300 rounded-lg flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-serif font-semibold text-foreground">To Kill a Mockingbird</h3>
                                <p class="text-sm text-muted-foreground">Requested by <span class="font-medium">Amit Shah</span></p>
                            </div>
                            <span class="badge badge-primary text-xs">Accepted</span>
                        </div>
                        <p class="text-sm text-muted-foreground mt-2">3 days ago</p>
                        <div class="mt-3 flex gap-2">
                            <button class="btn btn-outline btn-sm">View Details</button>
                            <button class="btn btn-ghost btn-sm">Message</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Outgoing Requests (hidden by default) -->
        <div id="outgoing" class="tab-content hidden space-y-4">
            <div class="card card-elevated p-4">
                <div class="flex flex-col sm:flex-row gap-4">
                    <div class="w-16 h-24 bg-gradient-to-br from-orange-200 to-orange-300 rounded-lg flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-serif font-semibold text-foreground">Pride and Prejudice</h3>
                                <p class="text-sm text-muted-foreground">Requested from <span class="font-medium">Neha Patel</span></p>
                            </div>
                            <span class="badge badge-outline text-xs">Pending</span>
                        </div>
                        <p class="text-sm text-muted-foreground mt-2">5 hours ago</p>
                        <div class="mt-3 flex gap-2">
                            <button class="btn btn-outline btn-sm">Cancel Request</button>
                            <button class="btn btn-ghost btn-sm">Message</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-elevated p-4">
                <div class="flex flex-col sm:flex-row gap-4">
                    <div class="w-16 h-24 bg-gradient-to-br from-pink-200 to-pink-300 rounded-lg flex-shrink-0"></div>
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div>
                                <h3 class="font-serif font-semibold text-foreground">The Alchemist</h3>
                                <p class="text-sm text-muted-foreground">Requested from <span class="font-medium">Vikram Singh</span></p>
                            </div>
                            <span class="badge badge-primary text-xs">Accepted</span>
                        </div>
                        <p class="text-sm text-muted-foreground mt-2">2 days ago</p>
                        <div class="mt-3 flex gap-2">
                            <button class="btn btn-primary btn-sm">Arrange Pickup</button>
                            <button class="btn btn-ghost btn-sm">Message</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>