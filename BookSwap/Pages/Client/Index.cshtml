@page
@model IndexModel
@{
    Layout = "_Client";
}
<main>
    <!-- Hero Section -->
    <section class="hero-gradient py-20 md:py-32">
        <div class="container text-center">
            <span class="inline-block bg-white/20 backdrop-blur-sm text-white px-4 py-1.5 rounded-full text-sm font-medium mb-6 animate-fade-in">
                🌟 Join 10,000+ book lovers
            </span>
            <h1 class="font-serif text-4xl md:text-6xl font-bold text-white mb-6 animate-slide-up">
                Where Books Find<br>New Homes
            </h1>
            <p class="text-xl text-white/80 max-w-2xl mx-auto mb-8 animate-slide-up" style="animation-delay: 0.1s">
                Connect with book lovers in your community. Swap, trade, or borrow pre-loved books and discover new reads.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up" style="animation-delay: 0.2s">
                <a href="/Client/Register" class="btn btn-lg bg-white text-primary hover:bg-gray-100">
                    Get Started Free
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
                <a asp-page="/Cilent/Browse" class="btn btn-lg bg-white/10 text-white border border-white/30 hover:bg-white/20">
                    Browse Books
                </a>
            </div>
        </div>
    </section>

    <!-- Category Section -->
    <section class="py-20 bg-muted/30">
        <div class="container">
            <div class="text-center mb-12">
                <h2 class="font-serif text-3xl md:text-4xl font-bold text-foreground mb-4">
                    Explore by Category
                </h2>
                <p class="text-muted-foreground max-w-xl mx-auto">
                    Discover books across various genres and find your next favorite read
                </p>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
                <a href="/Client/Browse?category=fiction" class="category-card card p-6 text-center cursor-pointer">
                    <div class="category-icon w-16 h-16 rounded-2xl hero-gradient flex items-center justify-center mx-auto mb-4 transition-all">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <h3 class="font-serif text-lg font-semibold mb-1">Fiction</h3>
                    <p class="text-sm text-muted-foreground">1,234 books</p>
                </a>

                <a asp-page="/Cilent/Browse?category=non-fiction" class="category-card card p-6 text-center cursor-pointer">
                    <div class="category-icon w-16 h-16 rounded-2xl hero-gradient flex items-center justify-center mx-auto mb-4 transition-all">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                        </svg>
                    </div>
                    <h3 class="font-serif text-lg font-semibold mb-1">Non-Fiction</h3>
                    <p class="text-sm text-muted-foreground">892 books</p>
                </a>

                <a asp-page="/Cilent/Browse?category=academic" class="category-card card p-6 text-center cursor-pointer">
                    <div class="category-icon w-16 h-16 rounded-2xl hero-gradient flex items-center justify-center mx-auto mb-4 transition-all">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M12 14l9-5-9-5-9 5 9 5z"></path>
                            <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                        </svg>
                    </div>
                    <h3 class="font-serif text-lg font-semibold mb-1">Academic</h3>
                    <p class="text-sm text-muted-foreground">567 books</p>
                </a>

                <a asp-page="/Cilent/Browse?category=children" class="category-card card p-6 text-center cursor-pointer">
                    <div class="category-icon w-16 h-16 rounded-2xl hero-gradient flex items-center justify-center mx-auto mb-4 transition-all">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="font-serif text-lg font-semibold mb-1">Children</h3>
                    <p class="text-sm text-muted-foreground">445 books</p>
                </a>
            </div>
        </div>
    </section>

    <!-- Featured Books -->
    <section class="py-20">
        <div class="container">
            <div class="text-center mb-12">
                <h2 class="font-serif text-3xl md:text-4xl font-bold text-foreground mb-4">
                    Featured Books
                </h2>
                <p class="text-muted-foreground max-w-xl mx-auto">
                    Hand-picked selections from our community's latest listings
                </p>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <a asp-page="/Cilent/BookDetail" class="book-card card-elevated">
                    <div class="aspect-[3/4] bg-gradient-to-br from-purple-200 to-purple-300 relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?w=300&h=400&fit=crop" alt="The Great Gatsby" class="book-image w-full h-full object-cover">
                    </div>
                    <div class="p-4">
                        <h3 class="font-serif font-semibold text-foreground mb-1 truncate">The Great Gatsby</h3>
                        <p class="text-sm text-muted-foreground mb-2">F. Scott Fitzgerald</p>
                        <div class="flex items-center justify-between">
                            <span class="badge badge-secondary text-xs">Like New</span>
                            <span class="text-sm font-semibold text-primary">₹150</span>
                        </div>
                    </div>
                </a>

                <a asp-page="/Cilent/BookDetail" class="book-card card-elevated">
                    <div class="aspect-[3/4] bg-gradient-to-br from-blue-200 to-blue-300 relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1543002588-bfa74002ed7e?w=300&h=400&fit=crop" alt="To Kill a Mockingbird" class="book-image w-full h-full object-cover">
                    </div>
                    <div class="p-4">
                        <h3 class="font-serif font-semibold text-foreground mb-1 truncate">To Kill a Mockingbird</h3>
                        <p class="text-sm text-muted-foreground mb-2">Harper Lee</p>
                        <div class="flex items-center justify-between">
                            <span class="badge badge-secondary text-xs">Good</span>
                            <span class="text-sm font-semibold text-primary">₹120</span>
                        </div>
                    </div>
                </a>

                <a asp-page="/Cilent/BookDetail" class="book-card card-elevated">
                    <div class="aspect-[3/4] bg-gradient-to-br from-green-200 to-green-300 relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1512820790803-83ca734da794?w=300&h=400&fit=crop" alt="1984" class="book-image w-full h-full object-cover">
                    </div>
                    <div class="p-4">
                        <h3 class="font-serif font-semibold text-foreground mb-1 truncate">1984</h3>
                        <p class="text-sm text-muted-foreground mb-2">George Orwell</p>
                        <div class="flex items-center justify-between">
                            <span class="badge badge-secondary text-xs">New</span>
                            <span class="text-sm font-semibold text-primary">₹180</span>
                        </div>
                    </div>
                </a>

                <a asp-page="/Cilent/BookDetail" class="book-card card-elevated">
                    <div class="aspect-[3/4] bg-gradient-to-br from-orange-200 to-orange-300 relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1589829085413-56de8ae18c73?w=300&h=400&fit=crop" alt="Pride and Prejudice" class="book-image w-full h-full object-cover">
                    </div>
                    <div class="p-4">
                        <h3 class="font-serif font-semibold text-foreground mb-1 truncate">Pride and Prejudice</h3>
                        <p class="text-sm text-muted-foreground mb-2">Jane Austen</p>
                        <div class="flex items-center justify-between">
                            <span class="badge badge-secondary text-xs">Fair</span>
                            <span class="text-sm font-semibold text-primary">₹100</span>
                        </div>
                    </div>
                </a>
            </div>

            <div class="text-center mt-8">
                <a asp-page="/Cilent/Browse" class="btn btn-outline btn-lg">
                    View All Books
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- How It Works -->
    <section class="py-20 bg-muted/30">
        <div class="container">
            <div class="text-center mb-12">
                <h2 class="font-serif text-3xl md:text-4xl font-bold text-foreground mb-4">
                    How It Works
                </h2>
                <p class="text-muted-foreground max-w-xl mx-auto">
                    Start sharing books in three simple steps
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <div class="text-center animate-on-scroll">
                    <div class="w-20 h-20 rounded-full hero-gradient flex items-center justify-center mx-auto mb-6">
                        <span class="text-3xl font-bold text-white">1</span>
                    </div>
                    <h3 class="font-serif text-xl font-semibold mb-3">List Your Books</h3>
                    <p class="text-muted-foreground">
                        Add books you want to swap or sell. Upload photos and set your preferences.
                    </p>
                </div>

                <div class="text-center animate-on-scroll">
                    <div class="w-20 h-20 rounded-full hero-gradient flex items-center justify-center mx-auto mb-6">
                        <span class="text-3xl font-bold text-white">2</span>
                    </div>
                    <h3 class="font-serif text-xl font-semibold mb-3">Connect & Chat</h3>
                    <p class="text-muted-foreground">
                        Browse listings, find books you love, and message owners to arrange a swap.
                    </p>
                </div>

                <div class="text-center animate-on-scroll">
                    <div class="w-20 h-20 rounded-full hero-gradient flex items-center justify-center mx-auto mb-6">
                        <span class="text-3xl font-bold text-white">3</span>
                    </div>
                    <h3 class="font-serif text-xl font-semibold mb-3">Swap & Enjoy</h3>
                    <p class="text-muted-foreground">
                        Meet up locally or arrange shipping. Enjoy your new reads!
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 hero-gradient">
        <div class="container text-center">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-white mb-4">
                Ready to Start Swapping?
            </h2>
            <p class="text-white/80 mb-8 max-w-xl mx-auto">
                Join thousands of book lovers and give your books a second life. It's free to get started!
            </p>
            <a href="~/Client/Register" class="btn btn-xl bg-white text-primary hover:bg-gray-100">
                Create Free Account
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>
    </section>
</main>